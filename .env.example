# Database
DB_PATH=data/coffee_news.db
# Vercel/serverless override:
# DB_PATH=/tmp/coffee_news.db

# HTTP behavior
USER_AGENT=AntigravityCoffeeIngestionBot/1.0 (+https://antigravity.local)
REQUEST_TIMEOUT_SECONDS=15
REQUEST_RETRIES=2

# Ingestion policy
INGESTION_WINDOW_HOURS=24
MAX_ITEMS_PER_SOURCE=50
ARTICLE_META_FETCH_BUDGET=8

# Scheduler (UTC)
SCHEDULER_ENABLED=true
# Vercel/serverless recommendation:
# SCHEDULER_ENABLED=false
SCHEDULE_HOUR_UTC=0
SCHEDULE_MINUTE_UTC=15

# API
APP_HOST=0.0.0.0
APP_PORT=8000
